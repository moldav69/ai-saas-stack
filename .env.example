# Nome del progetto Docker Compose
COMPOSE_PROJECT_NAME=ai_saas

# ====================================
# Configurazione n8n
# ====================================
N8N_HOST=app.miodominio.com
N8N_PORT=5678
N8N_PROTOCOL=https

# IMPORTANTE: Genera questa chiave con: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CAMBIA_QUESTO_CON_UNA_CHIAVE_LUNGA_32_CARATTERI_HEX

# Autenticazione Basic per n8n (opzionale ma raccomandato)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password-molto-forte-da-cambiare

# ====================================
# Configurazione AnythingLLM
# ====================================
# IMPORTANTE: Genera queste chiavi con: openssl rand -hex 32
JWT_SECRET=CAMBIA_QUESTO_CON_UNA_CHIAVE_LUNGA_32_CARATTERI_HEX
ENCRYPTION_KEY=CAMBIA_QUESTO_CON_ALTRA_CHIAVE_LUNGA_32_CARATTERI_HEX

# Chiave API OpenAI (opzionale, puoi configurarla anche dall'interfaccia web)
OPENAI_API_KEY=sk-proj-INSERISCI_LA_TUA_CHIAVE_OPENAI_SE_VUOI

# ====================================
# Configurazione Backup (rclone)
# ====================================
# Nome del remote rclone configurato (es. 'gdrive' per Google Drive)
RCLONE_REMOTE_NAME=gdrive

# Percorso della cartella sul remote dove salvare i backup
RCLONE_REMOTE_PATH=vps-backups

# Numero di giorni di retention per i backup locali (dopo vengono cancellati)
BACKUP_RETENTION_DAYS=7
